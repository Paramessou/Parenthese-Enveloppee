{% extends 'base.html.twig' %}

{% block title %}Appointment index{% endblock %}

{% block body %}
    <h1>Appointment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateCreationRdv</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Status</th>
                <th>DateDeModifRdv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr>
                <td>{{ appointment.id }}</td>
                <td>{{ appointment.dateCreationRdv ? appointment.dateCreationRdv|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment.debut ? appointment.debut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment.fin ? appointment.fin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment.status }}</td>
                <td>{{ appointment.dateDeModifRdv ? appointment.dateDeModifRdv|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_appointment_show', {'id': appointment.id}) }}">show</a>
                    <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_appointment_new') }}">Create new</a>
{% endblock %}
